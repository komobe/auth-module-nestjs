{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@contracts/*": ["libs/flexica/src/contracts/*"],
      "@adapters/*": ["libs/flexica/src/adapters/*"],
      "libs/flexica/src/*": ["libs/flexica/src/*"]
    }
  }
}